mixin banner(options)
  - var bgDesktop = options.bgDesktop || "";
  - var bgMobile = options.bgMobile || "";
  - var title = options.title || ""
  - var subtitle = options.subtitle || ""
  - var theme = options.theme || "white"
  - var textPosition = options.textPosition || "left"
  - var bgPosition = options.bgPosition || "right"
  - var classe = options.classe || "" 
  - var bannerTitleClass = options.bannerTitleClass || ""
  - var type = options.type || ""
  - var ctaLabel = options.ctaLabel || ""
  - var ctaLink = options.ctaLink ||  ""
  - var ctaClass = options.ctaClass || "" 
  - var imgDogs = options.imgDogs
  - var imgCats = options.imgCats
  - var imgDogsMobile = options.imgDogsMobile
  - var imgCatsMobile = options.imgCatsMobile
  - var btnVideo = options.btnVideo || false 
  - var btnVideoClass = options.btnVideoClass || "" 
  - var imgDogs = options.imgDogs
  - var imgCats = options.imgCats
  - var imgDogsMobile = options.imgDogsMobile
  - var imgCatsMobile = options.imgCatsMobile
  - var withText = options.withText || true
   
  .banner(data-theme=theme, data-text-position=textPosition, data-bg-desktop=bgDesktop, data-bg-mobile=bgMobile, class=classe, data-bg-position=bgPosition, data-img-dogs=imgDogs, data-img-cats=imgCats, data-img-dogs-mobile=imgDogsMobile, data-img-cats-mobile=imgCatsMobile)
    if withText
      .banner__textual
        h1.banner__title(class=bannerTitleClass) !{title}
        p.banner__description !{subtitle}
    if type == 'with-cta'
      a.btn.banner__cta(class = ctaClass, href=ctaLink, target="_blank") #{ctaLabel}
    if options.isVideo
      a.btn.banner__cta(class = ctaClass, href=ctaLink, target="_blank") #{ctaLabel}
      .article__video-thumbnail

